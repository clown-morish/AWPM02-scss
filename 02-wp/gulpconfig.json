{
  "browserSyncOptions": {
    "proxy": "wocker.test",
    "notify": true
  },
  "browserSyncWatchFiles": [
    "./img/*",
    "./*.css",
    "./*.min.css",
    "./js/*.min.js",
    "./**/*.php",
    "./**/*.html"
  ],
  "paths": {
    "js": "./js",
    "css": ".",
    "img": "./img",
    "imgsrc": "./src/img",
    "sass": "./sass",
    "node": "./node_modules/",
    "bower": "./bower_components/",
    "dev": "./src",
    "dist": "./dist",
    "distprod": "./dist-product",
    "vendor": "./vendor"
  }
}